<ItemsControl x:Class="icApplication.Controls.MatrixControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:icApplication.Controls">

    <ItemsControl.Resources>
        <ResourceDictionary Source="../Resources/MatrixTemplate.xaml" />
    </ItemsControl.Resources>

    <ItemsControl.ItemTemplate>
        <DynamicResource ResourceKey="DataTemplateLevel1" />
    </ItemsControl.ItemTemplate>
    <ItemsControl.HorizontalAlignment>Center</ItemsControl.HorizontalAlignment>
    <ItemsControl.VerticalAlignment>Center</ItemsControl.VerticalAlignment>

</ItemsControl>